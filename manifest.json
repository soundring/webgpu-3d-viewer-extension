{
  "manifest_version": 3,
  "name": "WebGPU 3D Viewer",
  "version": "1.1",
  "description": "View simple 3D scenes using the power of WebGPU or visualize real-time data in 3D.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WebGPU Tools"
  },
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "viewer.html",
        "visualization.html",
        "icons/icon_128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
