{
  "manifest_version": 3,
  "name": "WebGPU 3D Viewer",
  "version": "1.0",
  "description": "View simple 3D scenes using the power of WebGPU.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open WebGPU 3D Viewer"
  },
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  }
}